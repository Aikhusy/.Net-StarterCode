@model StarterCode.Models.Firewall
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/layouts/Base.cshtml";
    ViewData["Title"] = "Create Firewall Data";
}


<div class="d-flex flex-column flex-column-fluid">
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
                    Dashboards</h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="index.html" class="text-muted text-hover-primary">Main</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-500 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">Dashboards</li>
                </ul>
            </div>
        </div>
    </div>
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-xxl">
            @* CONTENT HERE *@

            <div class="col-xl-12">

                <div class="card card-flush h-lg-100" id="kt_contacts_main">

                    <div class="card-header pt-7" id="kt_chat_contacts_header">

                        <div class="card-title">
                            <i class="ki-duotone ki-badge fs-1 me-2"><span class="path1"></span><span
                                    class="path2"></span><span class="path3"></span><span class="path4"></span><span
                                    class="path5"></span></i>
                            <h2>Add New Firewall</h2>
                        </div>

                    </div>

                    <div class="card-body pt-5">
                        <!--begin::Form-->
                        <form id="kt_ecommerce_settings_general_form"
                            class="form fv-plugins-bootstrap5 fv-plugins-framework" asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            @* name *@
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <!--begin::Label-->
                                <label class="fs-6 fw-semibold form-label mt-3">
                                    <span class="required">Firewall Name</span>

                                    <span class="ms-1" data-bs-toggle="tooltip" aria-label="Enter the contact's name."
                                        data-bs-original-title="Enter the contact's name." data-kt-initialized="1">
                                        <i class="ki-duotone ki-information fs-7"><span class="path1"></span><span
                                                class="path2"></span><span class="path3"></span></i> </span>
                                </label>
                                <!--end::Label-->

                                <!--begin::Input-->
                                <input asp-for="fw_name" type="text" class="form-control form-control-solid" value="">
                                <!--end::Input-->
                                <div
                                    class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                    <span asp-validation-for="fw_name" class="text-danger"></span>
                                </div>
                            </div>

                            @* location *@
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <!--begin::Label-->
                                <label class="fs-6 fw-semibold form-label mt-3">
                                    <span class="required">Firewall Location</span>

                                    <span class="ms-1" data-bs-toggle="tooltip" aria-label="Enter the contact's name."
                                        data-bs-original-title="Enter the contact's name." data-kt-initialized="1">
                                        <i class="ki-duotone ki-information fs-7"><span class="path1"></span><span
                                                class="path2"></span><span class="path3"></span></i> </span>
                                </label>
                                <!--end::Label-->

                                <!--begin::Input-->
                                <input asp-for="fw_location" type="text" class="form-control form-control-solid"
                                    value="">
                                <!--end::Input-->
                                <div
                                    class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                    <span asp-validation-for="fw_location" class="text-danger"></span>
                                </div>
                            </div>

                            @* site *@
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <!--begin::Label-->
                                <label class="fs-6 fw-semibold form-label mt-3">
                                    <span class="required">Firewall Site</span>

                                    <span class="ms-1" data-bs-toggle="tooltip" aria-label="Enter the contact's name."
                                        data-bs-original-title="Enter the contact's name." data-kt-initialized="1">
                                        <i class="ki-duotone ki-information fs-7"><span class="path1"></span><span
                                                class="path2"></span><span class="path3"></span></i> </span>
                                </label>
                                <!--end::Label-->

                                <!--begin::Input-->
                                <input asp-for="fw_site" type="text" class="form-control form-control-solid" value="">
                                <!--end::Input-->
                                <div
                                    class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback">
                                    <span asp-validation-for="fw_site" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end">
                                <!--begin::Button-->
                                <div class="d-flex align-items-center gap-2 gap-lg-3">
                                    <a asp-action="Index" asp-controller="Firewall" data-kt-contacts-type="cancel" 
                                        class="btn btn-light me-3">Cancel</a>
                                </div>
    
                                <!--end::Button-->

                                <!--begin::Button-->
                                <button type="submit" data-kt-contacts-type="submit" class="btn btn-primary">
                                    <span class="indicator-label">
                                        Save
                                    </span>
                                    <span class="indicator-progress">
                                        Please wait... <span
                                            class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>
                                <!--end::Button-->
                            </div>

                        </form>

                    </div>

                </div>


            </div>

            @* END HERE *@
        </div>
    </div>
</div>


@* Old *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
