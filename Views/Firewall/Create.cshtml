@model StarterCode.Models.Firewall
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Firewall Data";
}

<h1>Create</h1>

<h4>Firewall</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="fw_name" class="control-label">Firewall Name</label>
                <input asp-for="fw_name" class="form-control" />
                <span asp-validation-for="fw_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fw_location" class="control-label">Firewall Location</label>
                <input asp-for="fw_location" class="form-control" />
                <span asp-validation-for="fw_location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fw_site" class="control-label"></label>
                <input asp-for="fw_site" class="form-control" name="Rating" type="number" min="0"/>
                <span asp-validation-for="fw_site" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
